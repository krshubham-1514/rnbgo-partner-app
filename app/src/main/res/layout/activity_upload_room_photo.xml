<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadRoomPhotoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">









        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">








                    <ImageView
                        android:id="@+id/upload_photo_one"
                        android:layout_width="375dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/upload_image"
                        />

            <ImageView
                android:id="@+id/upload_photo_two"
                android:layout_width="375dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/upload_image" />

            <ImageView
                android:id="@+id/upload_photo_three"
                android:layout_width="375dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/upload_image" />




                    <ImageView
                        android:id="@+id/upload_photo_four"
                        android:layout_width="375dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/upload_image"
                        />

                    <ImageView
                        android:id="@+id/upload_photo_five"
                        android:layout_width="375dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/upload_image"
                        />





            <Button android:id="@+id/btn_room_photo_upload"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="25dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:background="@drawable/roundedbutton"
                android:textColor="@color/colorWhite"
                android:text="@string/Continue"
                 />




        </LinearLayout>




    </RelativeLayout>




</ScrollView>